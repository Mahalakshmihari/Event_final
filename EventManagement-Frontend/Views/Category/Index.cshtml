@model IEnumerable<EventManagement_Frontend.Models.CategoryModel>

@{
    ViewData["Title"] = "Categories";
}
<html>
<head>
    <style>
        .header {
            padding: 10px;
            text-align: center;
            background: #4b0082;
            color: white;
            font-size: 24px;
        }

        .footer {
            padding: 5px;
            text-align: center;
            background: #4b0082;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color: #4b0082;">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EventManagementApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                        @*   </li>
                        <li class="nav-item" style=" margin-left: 1100px;">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="EventAppPage">Logout</a>
                        </li> *@
                    <li>
                        <form class="form-inline mt-2 mt-md-0" asp-controller="Home" asp-action="EventAppPage" method="get">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style=" margin-left: 1100px;">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <br />
    <br />

    <h2>Categories</h2>

<!-- Button to add a new category -->
<a asp-action="Create" class="btn btn-primary">Add New Category</a>

<!-- Display the list of categories -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <!-- Edit Button -->
                     <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Edit</a>

                   
                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-route-id="@category.CategoryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</body></html>